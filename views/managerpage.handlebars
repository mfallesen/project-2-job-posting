<div class="container">
    
        <div class= "card-header-title profile-category manager-welcome">
            Welcome, {{manager.first_name}} {{manager.last_name}}  
            
        </div>

<div class= "user-profile">

<div class= "view-profile">
<div class="columns">
        <div class= "card manager-profile column is-10 is-offset-1">
                <div class="columns">
                        <div class="column is-10 is-offset-1 page-title">
                            Your Manager Profile
                            <hr>
                        </div>
                    </div>

        <div class="columns">

            <div class="column is-4 is-offset-1"> 

                <div class="profile-name">
                    {{manager.first_name}} {{manager.last_name}}
                </div>

                <div class="profile-category has-icons-left">
                    <span class="icon is-small is-left">
                         <i class="fas fa-envelope"></i>
                    </span>
                    {{manager.email}}
                </div>

                <div class="profile-category has-icons-left">
                     <span class="icon is-small is-left">
                         <i class="fas fa-phone"></i>
                    </span>
                    {{manager.phone}}
                </div>

                <div class="profile-category">
                    <strong>Company Information:</strong>
                </div>

                    <div class="profile-category has-icons-left">
                    <span class="icon is-small is-left">
                         <i class="fas fa-building"></i>
                    </span>
                        {{company.company_name}}
                    </div>

                    <div class="profile-category has-icons-left">
                        <span class="icon is-small is-left">
                            <i class="fas fa-phone"></i>
                        </span>
                        {{company.phone}}
                    </div>
            </div>  

            <div class="column is-6">

                <div class="bio profile-category">
                    <p><strong>About:</strong></p>

                    <p>
                        {{manager.bio}}
                    </p>

                    
                </div>
            </div>
         </div>

         <div class= "columns">
            <div class= "column is-12">
                 <div class="editbutton">
                    <button class="button is-primary edit-toggle">Edit Profile</button>
                </div>
            </div>
        </div>
      </div>
      </div>
    </div>
    

<div class= "edit-profile">
    <div class="columns">
        <div class="card edit-profile column is-10 is-offset-1">
            <div class= "column is-10 is-offset-1 page-title">
                Edit Your Profile
                <hr>
            </div>

            <div class="columns">
                <div class="column is-4 is-offset-1">
                     <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">Name</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control is-expanded has-icons-left">
                            <input class="input firstNameInput" type="text" value={{manager.first_name}}>
                            <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                        </p>
                    </div>

                    <div class="field">
                        <p class="control is-expanded has-icons-left has-icons-right">
                            <input class="input lastNameInput" type="text" value={{manager.last_name}}>
                            <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                        </p>
                    </div>
                </div>
            </div>

              <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">E-mail</label>
                </div>
                <div class="field-body">
                    <div class="field is-expanded">
                        <p class="control is-expanded has-icons-left has-icons-right">
                            <input class="input emailInput" type="email" value={{manager.email}}>
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </p>
                    </div>
                </div>
            </div>

               <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">Phone</label>
                </div>
                <div class="field-body">
                    <div class="field is-expanded">
                        <div class="field has-addons">
                            <p class="control">
                                <a class="button is-static">
                                    +1
                                </a>
                            </p>
                            <p class="control is-expanded">
                                <input class="input phoneInput" type="tel" value={{manager.phone}}>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class= "column is-6">

            <div class="field is-horizontal">
                <div class="field-label">
                     <label class="label">Your Bio</label>
                </div>
                <div class= "field-body">
                    <div class= "field is-expanded">
                        <div class="control">
                            <textarea class="textarea bioInput">{{manager.bio}}</textarea>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

            <div class= "editbutton">
                <button class="button is-primary save-changes">Save Changes</button>
            </div>
       

            

            </div>
        </div>
    </div>
   

        </div>
    </div>

